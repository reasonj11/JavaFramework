package com.rubypaper;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.ApplicationArguments;
import org.springframework.boot.ApplicationRunner;
import org.springframework.stereotype.Service;

import com.rubypaper.persistence.UsersDAO;
@Service
public class UsersService implements ApplicationRunner {
	@Autowired
	private UsersDAO usersdao;
	@Override
	public void run(ApplicationArguments args) throws Exception { 
		Map<String, Object> users =new HashMap<String, Object>(); 
		users.put("id", "lee");
		users.put("pw", "lee111!");
		users.put("name", "leesunshin");
		List<Map<String, Object>> usersList =usersdao.getUsers(); 
		for(Map<String, Object> result:usersList) {
			System.out.println("----> "+result.toString());
	}
	}//run
}//BoardService